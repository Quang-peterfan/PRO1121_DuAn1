    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/geosanslight"
        android:text="Doanh Thu"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/doanhthutungay"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/boder_button"
        android:fontFamily="@font/monu"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:text="Từ Ngày: "
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/edtStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:hint="Ngày/Tháng/Năm"
        android:textColorHint="#716A6A"
        android:textColor="#FF9800"
        android:paddingLeft="12dp"
        app:layout_constraintStart_toEndOf="@+id/doanhthutungay"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/doanhthudenngay"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/boder_button"
        android:fontFamily="@font/monu"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:text="Đến Ngày:"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/doanhthutungay" />

    <EditText
        android:id="@+id/edtEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:textColorHint="#716A6A"
        android:layout_marginEnd="8dp"
        android:hint="Ngày/Tháng/Năm"
        android:textColor="#FF9800"
        android:paddingLeft="12dp"
        app:layout_constraintStart_toEndOf="@+id/doanhthudenngay"
        app:layout_constraintTop_toBottomOf="@+id/edtStart" />

