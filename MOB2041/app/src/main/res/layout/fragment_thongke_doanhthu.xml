    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/monu"
        android:text="Tổng Doanh Thu  "
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/edtEnd"
        tools:layout_editor_absoluteX="145dp" />

    <TextView
        android:id="@+id/txtKetQua"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/theboldfont"
        android:text="0đ"
        android:textAlignment="center"
        android:textColor="#F80303"
        android:textSize="25dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="163dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnThongKe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="159dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="159dp"
        android:text="Xác Nhận"
        android:backgroundTint="#FF9800"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/monu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtKetQua" />


